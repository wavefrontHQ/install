{
  "_comment": {
      "standard_format": "see below",
      "support": {
          "agent_name": ["list of supported plugins"]
      },
      "plugins": {
          "APP_NAME": {
              "app_search": "search_name",
              "command": "commands that came with the app",
              "conf_name": "plugin_conf_filename",
              "AGENT": {
                  "module": "python_module_name",
                  "plugin_name": "For COLLECTD, this is name of plugin used. For TELEGRAF, this is the name to query sample config",
                  "class_name": "installer_name"
              }
          }
      }
  },

  "data": {
      "support": {
          "TELEGRAF": [
              "apache", "nginx", "mysql", "memcached", "zookeeper",
              "redis"
          ],
          "COLLECTD": [
              "apache", "cassandra", "memcached", "mysql", "nginx",
              "postgresql", "redis", "zookeeper"
          ]
      },

      "plugins": {
          "apache":
          {
              "app_search": "apache2|httpd",
              "command": "apache2|httpd",
              "conf_name": "wavefront_apache.conf",
              "COLLECTD": {
                  "module": "apache_plugin",
                  "plugin_name": "apache",
                  "class_name": "ApacheInstaller"
              },
              "TELEGRAF": {
                  "module": "apache_configurator",
                  "plugin_name": "apache",
                  "class_name": "ApacheConfigurator"
              }
          },
          "cassandra":
          {
              "app_search": "org.apache.cassandra",
              "command": "cassandra|nodetool",
              "conf_name": "wavefront_cassandra.conf",
              "COLLECTD": {
                  "module": "cassandra_plugin",
                  "plugin_name": "java",
                  "class_name": "CassandraInstaller"
              }
          },
          "memcached": 
          {
              "app_search": "memcached",
              "command": "memcached",
              "conf_name": "wavefront_memcached.conf",
              "COLLECTD": {
                  "module": "memcached_plugin",
                  "plugin_name": "memcached",
                  "class_name": "MemcachedInstaller"
              },
              "TELEGRAF": {
                  "module": "memcached_configurator",
                  "plugin_name": "memcached",
                  "class_name": "MemcachedConfigurator"
              }
          },
          "mysql": 
          {
              "app_search": "mysqld",
              "command": "mysql|mysqld",
              "conf_name": "wavefront_mysql.conf",
              "COLLECTD": {
                  "module": "mysql_plugin",
                  "plugin_name": "mysql",
                  "class_name": "MySQLInstaller"
              },
              "TELEGRAF": {
                  "module": "mysql_configurator",
                  "plugin_name": "mysql",
                  "class_name": "MySQLConfigurator"
              }
          },
          "nginx":
          {
              "app_search": "nginx",
              "command": "nginx",
              "conf_name": "wavefront_nginx.conf",
              "COLLECTD": {
                  "module": "nginx_plugin",
                  "plugin_name": "nginx",
                  "class_name": "NginxInstaller"
              },
              "TELEGRAF": {
                  "module": "nginx_configurator",
                  "plugin_name": "nginx",
                  "class_name": "NginxConfigurator"
	      }
          },
          "postgresql":
          {
              "app_search": "postgresql",
              "command": "psql",
              "conf_name": "wavefront_postgres.conf",
              "COLLECTD": {
                  "module": "postgresql_plugin",
                  "plugin_name": "postgresql",
                  "class_name": "PostgresqlInstaller"
              }
          },
          "redis":
          {
              "app_search": "redis-server",
              "command": "redis-cli",
              "conf_name": "wavefront_redis.conf",
              "COLLECTD": {
                  "module": "redis_plugin",
                  "plugin_name": "python",
                  "class_name": "RedisInstaller"
              },
              "TELEGRAF": {
                  "module": "redis_configurator",
                  "plugin_name": "redis",
                  "class_name": "RedisConfigurator"
              }
          },
          "zookeeper":
          {
              "app_search": "org.apache.zookeeper",
              "command": "None",
              "conf_name": "wavefront_zookeeper.conf",
              "COLLECTD": {
                  "module": "zookeeper_plugin",
                  "plugin_name": "zookeeper",
                  "class_name": "ZookeeperInstaller"
              },
              "TELEGRAF": {
                  "module": "zookeeper_configurator",
                  "plugin_name": "zookeeper",
                  "class_name": "ZookeeperConfigurator"
              }
          }
      }
  }
}
